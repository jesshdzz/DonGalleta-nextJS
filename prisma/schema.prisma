generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 2. Tablas para NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// 3. Modelo de Usuario
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // Para credenciales (Hash)
  role          Role      @default(USER) // Enum para roles

  accounts Account[]
  sessions Session[]
  orders   Order[]
  reviews  Review[]
  cart     Cart? // Relación 1 a 1 con su carrito activo
}

enum Role {
  USER
  ADMIN
}

// 4. Catálogo de Productos
model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String? @db.Text
  price       Decimal @db.Decimal(10, 2)
  image       String? // URL de la imagen
  stock       Int     @default(0)
  slug        String  @unique // Para URLs amigables: /producto/galleta-chocolate
  isActive    Boolean @default(true) // Soft Delete (en lugar de borrar)

  flavors    ProductFlavor[]
  orderItems OrderItem[]
  cartItems  CartItem[]
  reviews    Review[]
}

// Tabla Pivote: Producto <-> Sabor
model ProductFlavor {
  productId Int
  flavorId  Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  flavor    Flavor  @relation(fields: [flavorId], references: [id], onDelete: Cascade)

  @@id([productId, flavorId]) // Clave compuesta
}

model Flavor {
  id       Int             @id @default(autoincrement())
  name     String
  products ProductFlavor[]
}

// 5. Sistema de Pedidos
model Order {
  id        String      @id @default(cuid()) // IDs seguros tipo 'clh...'
  userId    String
  total     Decimal     @db.Decimal(10, 2)
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relaciones
  user    User        @relation(fields: [userId], references: [id])
  items   OrderItem[]
  payment Payment?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId Int
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Precio al momento de la compra (snapshot)

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

// 6. Carrito de Compras
model Cart {
  id        String   @id @default(cuid())
  userId    String?  @unique // Opcional para soportar carritos de invitados
  updatedAt DateTime @updatedAt

  user  User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items CartItem[]
}

model CartItem {
  id        String @id @default(cuid())
  cartId    String
  productId Int
  quantity  Int

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId]) // Evita duplicados del mismo producto en un carrito
}

// 7. Extras (Pagos, Reseñas, Sucursales)
model Payment {
  id            String        @id @default(cuid())
  orderId       String        @unique
  method        PaymentMethod
  transactionId String? // ID de Stripe/PayPal
  amount        Decimal       @db.Decimal(10, 2)
  status        String // 'paid', 'failed'

  order Order @relation(fields: [orderId], references: [id])
}

enum PaymentMethod {
  PAYPAL
  STRIPE
  CASH
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  productId Int
  rating    Int      @default(5) // 1-5 estrellas
  comment   String?  @db.Text
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model Branch {
  id      Int      @id @default(autoincrement())
  name    String
  address String
  lat     Decimal? @db.Decimal(10, 8)
  lng     Decimal? @db.Decimal(11, 8)
  phone   String?
}
